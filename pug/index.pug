extends template.pug

block isi
	.alert.alert-info
		.close.logout &times;
		| Halo #[span.usernamenya]
	.list-group.postingannya

	.modal.modalLogin(data-backdrop='static')
		.modal-dialog
			.modal-content
				.modal-header
					h4.modal-title Login dulu
				.modal-body
					form.formLogin
						.form-group
							label Username
							input.form-control.loginUsername
						.form-group
							label Password
							input.form-control.loginPassword(type='password')
						.form-group
							input.btn.btn-success.loginSubmit(value='Login' type='submit')

block diLuarContainer
	.navbar.navbar-default.navbar-fixed-bottom
		.container
			table.table.table-bordered
				tbody 
					tr 
						td: .btn.btn-primary.tambahBaru Tambah

block css
	include:uglify-css:stylus index.stylus

block js
	include:uglify-js:babel(presets=['env']) index.js